@model IEnumerable<User>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">USER LIST</h2>
    </div>
    <div class="col-6 text-end">
      <a asp-controller="User" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> &nbsp; Add New User
      </a>
    </div>
  </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
        CPF
      </th>
      <th>
        Password
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      @foreach (var obj in Model)
      {
        <tr>
            <td width="30%">
              @obj.Name
            </td>
            <td width="30%">
              @obj.Email
            </td>
            <td width="20%">
              @obj.Cpf
            </td>
            <td width="20%">
              @obj.Password
            </td>
            <td>
              <div class="w-75 btn-group" role="group">
                
                <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id"
                class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i> Edit</a>

                <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id"
                class="btn btn-danger mx-1"> <i class="bi bi-trash-fill"></i> Delete</a>

              </div>
            </td>
        </tr>
      }
  </tbody>
</table>

</div>

