@model LoginModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["ErrorMessage"] != null)
{
  <div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["ErrorMessage"]
  </div>
}

<form asp-controller="Login" asp-action="Enter" method="post">
  <div class="form-group">
    <label for="login">Email</label>
    <input type="email" asp-for="Email" class="form-control" id="login" placeholder="Enter email">
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Enter password">
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>
  <br/>
  <button type="submit" class="btn btn-primary btn-block">Login</button>
</form>